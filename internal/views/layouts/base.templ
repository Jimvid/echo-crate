package view

templ Base(title string) {
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>{ title }</title>
    <script src="static/js/alpine@3.13.5.min.js"></script>
    <script src="static/js/htmx.org@1.9.10.min.js"></script>
    <link rel="stylesheet" href="static/css/main.min.css" />
</head>

<body>
    <main>
        <div class="text-blue-200 bg-blue-200">{ title }</div>
        { children... }
    </main>
</body>

</html>
}
